<% if (message) { %>
       <% if (status == true) { %>
          <div class="ml-80 w-96 ">   <p class="absolute bg-blue-200  text-gray-700 font-bold px-8 rounded-lg py-2 mt-10 ml-96"> <%= message %>   <a href="/login"> <i class="fa-solid ml-10 rounded-full hover:scale-105 transition  bg-blue-500 h-9 w-9 pl-3 pt-2 text-xl fa-xmark"></i></a></p> </div>   
          
          <% }else{ %>
               <% if (verify) { %>
                    <div class="ml-80 w-96 ">   <p style="background-color: red;" class="absolute   text-white font-bold px-8 rounded-lg py-2 mt-3 ml-52"> <%=message%> <a class="bg-blue-600 p-2 rounded-lg mr-2" href="/verify/<%=verify%> ">verifynow</a> or <a href="/login"><i class="fa-solid ml-3 rounded-full hover:scale-105 transition  bg-blue-500 h-9 w-9 pl-3 pt-2 text-xl fa-xmark"></i></a></p> </div>   
           
               <% }else{ %>
 
               <div class="ml-80 w-96 ">   <p style="background-color: red;" class="absolute   text-white font-bold px-8 rounded-lg py-2 mt-10 ml-96"> <%= message %>   <a href="/login"> <i class="fa-solid ml-10 rounded-full hover:scale-105 transition  bg-blue-500 h-9 w-9 pl-3 pt-2 text-xl fa-xmark"></i></a></p> </div>   
                     <% } %> 
         <% } %> 
<% } %>
          
 
<!-- loging from desgin -->

<div class=" flex items-center h-screen w-screen bg-neutral-200 justify-center">

<div style="height:400px; width:700px;" class=" grid grid-cols-2  border rounded-xl">
           <!-- login img desgin -->
          <div class="border-r-2  " >
                  
                 <img class="h-full w-full object-cover rounded-l-xl" src="/img/login.jpg"  alt="">

          </div>
          <!-- login form desgin -->
          <div class=" w-full bg-white pt-5 rounded-r-xl p-3">
                  <form class="space-y-3 h-full " action="/login " method="post">

                       <div>
                            <h3 class="font-extrabold text-3xl">Sign In</h3>
                       </div>
                       <div class="font-semibold text-slate-700">
                              <label for="email">Email</label><br>
                            <input class="border pl-3 rounded-md w-full h-10" name="email" type="email" id="email">
                       </div>
                       <div class="font-semibold justify-center text-slate-700">
                              <label for="password">Password</label><br>
                            <input class="border rounded-md pl-3   w-full h-10" name="password" type="password" id="password">
                       </div>
                       <div class="font-semibold text-slate-700">
                             
                          <button class="bg-blue-500 text-white h-10 w-full rounded-md" type="submit">log in</button>

                       </div>
                      <div class="flex justify-between text-sm  text-blue-600">
                           <a href="">Forgot password</a>
                           <a href="/regester">Create an accout</a>

                          </div>

                  </form>
                 
          </div>

 </div>
  
</div>
