<div class=" flex items-center  h-screen w-screen  bg-neutral-200  justify-center">

    <div  class=" h-4/6 w-8/12 grid gap-2 grid-cols-6 mb-10   rounded-xl">
  
        <%- include('./layouts/nav.ejs')%> 
                 <!-- profile right -->
              <div class="border bg-white  rounded-lg col-span-4  ">
                           
                  
                  <div class="m-8">
                      <form class="space-y-4 h-full " method="post" action="/edit">
  
                          <div>
                               <h3 class="font-semibold   text-3xl">Edit info</h3>
                          </div>
                          <!-- <p>not match</p> -->
                          <hr>
                          <div class="font-semibold   text-slate-700">
                                 <label for="username">User name</label><br>
                               <input class="border pl-3  rounded-md w-full h-10" name="username" type="username" id="username">
                          </div>
                          
                          <div class="font-semibold justify-center text-slate-700">
                                 <label for="location">Location</label><br>
                               <input class="border rounded-md  pl-3  w-full h-10" type="text" name="location" id="location">
                          </div>
                          <div class="font-semibold justify-center text-slate-700">
                                 <label for="Number">Number</label><br>
                               <input class="border rounded-md  pl-3  w-full h-10" type="number" name="number" id="Number">
                          </div>
                          <div class="font-semibold justify-center text-slate-700">
                                 <label for="gender">Gender</label><br>
                               <!-- <input class="border rounded-md   pl-3 w-full h-10" type="password" id="confpass"> -->
                           
                               <input type="radio" id="male" name="gender" value="male">
                             
                               <label for="male">Male</label><br>
                               <input type="radio" id="female" name="gender" value="female">
                               <label for="female">Female</label>
                          </div>
                        
                          <div class="font-semibold text-slate-700">
                                
                             <button class="bg-blue-600 text-white h-10 w-full rounded-md" type="submit">Update</button>
  
                          </div>
                          
  
                     </form>
                  </div>
  
  
              </div>
  
    </div>
      
    </div>